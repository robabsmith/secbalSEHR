}
@article{Piketty2003,
abstract = {This paper uses data from income tax returns (1915-98), wage tax returns$\backslash$n(1919-98), and inheritance tax returns (1902-94) in order to compute$\backslash$nhomogeneous, yearly estimates of income, wage, and wealth inequality$\backslash$nfor twentieth-century France. The main conclusion is that the decline$\backslash$nin income inequality that took place during the first half of the$\backslash$ncentury was mostly accidental. In France, and possibly in a number$\backslash$nof other countries as well, wage inequality has been extremely stable$\backslash$nin the long run, and the secular decline in income inequality is$\backslash$nfor the most part a capital income phenomenon. Holders of large fortunes$\backslash$nwere badly hurt by major shocks during the 1914-45 period, and they$\backslash$nwere never able to fully recover from these shocks, probably because$\backslash$nof the dynamic effects of progressive taxation on capital accumulation$\backslash$nand pretax income inequality.},
