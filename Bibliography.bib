title = {{The Rise of the Machines: Automation, Horizontal Innovation and Income Inequality}},
url = {http://www.usc.edu/schools/business/FBE/seminars/papers/M{\_}4-25-14{\_}HEMOUS.pdf},
year = {2013}
}
